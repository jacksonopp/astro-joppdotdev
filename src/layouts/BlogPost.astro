---
import { getEntryBySlug } from "astro:content";
import Layout from "./Layout.astro";
import Hero from "../components/Hero.astro";

const { frontmatter } = Astro.props;

const hero = await getEntryBySlug("hero", frontmatter.slug);
---

<Layout title={frontmatter.title}>
  {hero && <Hero heroContent={hero} cta={false} />}

  <article
    class="prose prose-headings:text-primary-900 mx-auto py-16 md:px-0 px-8 xl:max-w-4xl lg:max-w-2xl md:max-w-xl max-w-lg"
  >
    <slot />
  </article>
</Layout>
