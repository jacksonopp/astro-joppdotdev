---
import { getEntryBySlug } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";

const { slug } = Astro.params;

const article = await getEntryBySlug("blog", slug ?? "notfound");

const blog = await article?.render();

const notFoundArticle = await getEntryBySlug("blog", "notfound");
const notFoundBlog = await notFoundArticle.render();
---

{blog && <blog.Content />}
{!blog && <notFoundBlog.Content />}
